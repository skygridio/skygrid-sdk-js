{
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "no-cond-assign": 0,
    "no-console": 0,

    "block-scoped-var": 2,
    "eqeqeq": [2, "smart"],
    "no-else-return": 0,
    "wrap-iife": [2, "inside"],
    "no-use-before-define": 1,
    "no-confusing-arrow": 1,

    "camelcase": 2,
    "new-cap": 0,
    "no-lonely-if": 2,
    "keyword-spacing": 2,
    "space-in-brackets": 0,
    "space-infix-ops": 2,
    "valid-jsdoc": 2,
    "space-before-blocks": 2,
    "keyword-spacing": 2,
    "space-infix-ops": 2,
    "padded-blocks": [2, "never"],
    "space-in-parens": [2, "never"],
    "object-curly-spacing": [2, "always"],
    "no-dupe-class-members": 2,
    "no-undef": 2,
    "prefer-const": 1,
    "no-case-declarations": 2,
    "no-nested-ternary": 1,
    "no-unneeded-ternary": 1,
    "no-const-assign": 2,
    "no-var": 2,
    "no-new-object": 1,
    "prefer-arrow-callback": 1,
    "arrow-spacing": 2,
    "no-unreachable": 1,
    "curly": [2, "all"],
    "no-floating-decimal": 2,
    "no-global-assign": 2,
    "no-implied-eval": 2,
    "no-invalid-this": 2,
    "no-lone-blocks": 1,
    //"no-magic-numbers": [1, { "ignoreArrayIndexes": true }],
    "no-new-wrappers": 2,
    "no-new-func": 2,
    "no-new": 2,
    "no-new-symbol": 2,
    //"no-return-await": 2,
    "no-self-assign": 2,
    "no-self-compare": 2,
    "no-unused-expressions": 2,
    //"no-useless-return": 2,
    "no-with": 2,
    "no-unused-vars": 1,
    "no-delete-var": 2,
    "constructor-super": 2,
    "no-class-assign": 2,
    "no-this-before-super": 2,
    "no-unmodified-loop-condition": 2,

    "semi": [2, "always"],

    "strict": [2, "never"],
    "indent": [2, "tab", { "SwitchCase": 1 }],
    "quotes": [2, "single"]
  }
}